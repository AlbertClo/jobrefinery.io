{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "bugsnag/bugsnag-laravel": "^2.0",
        "inertiajs/inertia-laravel": "^1.0",
        "laravel/framework": "^11.9",
        "laravel/pail": "^1.2",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "laravel/vapor-cli": "^1.65",
        "laravel/vapor-core": "^2.37",
        "lorisleiva/laravel-actions": "^2.8",
        "symfony/dom-crawler": "^7.1",
        "tightenco/ziggy": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.1",
        "beyondcode/laravel-dump-server": "^2.0",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^2.0",
        "laravel/breeze": "^2.0",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.29",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse --level=5 --memory-limit=2G"
        ],
        "queues:clear": [
            "@php artisan queue:clear --queue=default",
            "@php artisan queue:clear --queue=prompt-llm",
            "@php artisan queue:flush"
        ],
        "queues:listen": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -k -c \"#fff,#fff,#fff\" \"php artisan pail -vv\" \"php artisan queue:listen --queue=default\" \"php artisan queue:listen --queue=prompt-llm\"  --names=pail,queue:default,queue:prompt-llm"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -k -c \"#93c5fd,#c4b5fd,#d4d4d8,#fdba74\" \"php artisan queue:listen --tries=1\" \"php artisan queue:listen --queue=prompt-llm\" \"php artisan pail\" \"npm run dev\" --names=queue:default,queue:prompt-llm,logs,vite"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
